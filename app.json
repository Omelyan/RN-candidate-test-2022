{
  "expo": {
    "name": "Woorkroom",
    "slug": "Woorkroom",
    "version": "1.0.0",
    "orientation": "portrait", // thankfully, designer didn't provide design for landscape mode...
    "icon": "./assets/images/png/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/png/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.woorkroom.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/png/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/images/png/favicon.png"
    }
  }
}
